{
    "name": "URL-Sharing",
    "version": "0.0.1",
    "description": "Sharing URL Everywhere",
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "browser_action": {},
    "permissions": [
        "tabs",
        "contextMenus"
    ],
    "manifest_version": 2
}